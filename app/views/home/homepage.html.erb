          <% end %>
        </div>

      </div>
    </div>
  </div>

</div>
<!-- End section portfolio -->

<!-- start section services -->
<div id="services" class="text-center paddsection">
  <div class="container">
    <div class="row justify-content-between">

      <div class="col-lg-12">
        <div class="section-title text-center">
          <h2>Services</h2>
          <% @services.each do |service| %>

            <p>
              <button class="btn btn-lg btn-danger services-btn mx-auto" type="button" data-toggle="collapse" data-target=#<%= service.name %> aria-expanded="false" aria-controls="collapseExample" style="display: block;">
                <%= service.name %> <i class="ion-android-arrow-dropdown"></i>
              </button>
            </p>
            <%= tag.div class: 'collapse', id: service.name do %>
              <div class="card card-body">
                <p class="service-description">
                  <%= service.description %>
                </p>
                <% service.service_items.each do |item| %>
                  <p class="service-price">
                    <strong><%= item.name %></strong>: <span class="badge badge-dark">$<%= item.price %></span>
                  </p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      
      </div>
    </div>
  </div>
</div>
<!-- end section services -->

<!-- start section contact -->
<div id="contact" class="paddsection">
  <div class="container">
    <div class="contact-block1">
      <div class="row">

        <div class="col-lg-6">
          <div class="contact-contact">

            <h2 class="mb-30">GET IN TOUCH</h2>

          </div>
        </div>

        <div class="col-lg-6">
          <%= form_for @message, url: message_path do |f| %>
            <% if flash[:notice] %>
              <div class="alert alert-info" role="alert">
                <%= flash[:notice] %>
              </div>
            <% end %>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.label :name, hidden: true %>
                <div>
                  <%= f.text_field :name, class: 'form-control', placeholder: 'Your Name'  %>
                </div>
              </div>

              <div class="form-group col-md-6">
                <%= f.label :email, hidden: true %>
                <div>
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Your Email' %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-12">
                <%= f.label :subject, hidden: true %>
                <div>
                  <%= f.text_field :subject, class: 'form-control', placeholder: 'Subject' %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-12">
                <%= f.label :message, hidden: true %>
                <div>
                  <%= f.text_area :message, class: 'form-control', style: 'height: 250px;', placeholder: 'Message' %>
                </div>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Send Message", class: 'btn btn-primary' %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
<!-- start sectoion contact -->


