<div class="row">
  <div class="col-lg-2">
    <%= render 'layouts/sidenav' %>
  </div>

  <div class="col-lg-10">
    <div>
    </div>
    <h1 class="text-center">Add About Section</h1>

    <%= form_for @about, url: admin_about_create_path do |f| %>
      <% if flash[:alert] %>
        <% flash[:alert].each do |alert| %>
          <p><%= alert %></p>
        <% end %>
      <% end %>

      <div class="form-group row">
        <%= f.label :about_heading, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_area :about_heading, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :about_description, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_area :about_description, class: 'form-control' %>
        </div>
      </div>

      <div>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>