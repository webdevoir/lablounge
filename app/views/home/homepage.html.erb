<!-- start section portfolio -->
<div id="gallery" class="text-center paddsection">

  <div class="container">
    <div class="section-title text-center">
      <h2>Gallery</h2>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="owl-carousel owl-theme">
          <% @images.each do |image| %>
