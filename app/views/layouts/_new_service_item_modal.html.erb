<div class="modal fade" id="newServiceItemModal" tabindex="-1" role="dialog" aria-labelledby="newServiceItem" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newServiceItem">New Service Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [ :admin, @service, @service.service_items.build ], local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :name, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label 'Price $', class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_field :price, class: 'form-control' %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>