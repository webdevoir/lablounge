<div class="row">
  <div class="col-lg-2">
    <%= render 'layouts/sidenav' %>
  </div>

  <div class="col-lg-10 text-center padding-50">
    <h1 class="text-center admin-header">Edit Service</h1>
    <%= @service_item.name %>

    <%= form_with(model: [ :admin, @service, @service_item ], local: true) do |f| %>
    <% if flash[:alert] %>
        <% flash[:alert].each do |alert| %>
          <p><%= alert %></p>
        <% end %>
      <% end %>
      <div class="form-group row w-75 mx-auto">
        <%= f.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row w-75 mx-auto">
        <%= f.label 'Price $', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :price, class: 'form-control' %>
        </div>
      </div>
      <div>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>